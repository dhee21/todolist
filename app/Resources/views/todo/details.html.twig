{% extends 'base.html.twig' %}
{% block body%}
<a href="/" class="btn btn-default">Back to Todos</a>

<h2>{{todo.name}}</h2>

<ul class="list-group">
<li class="list-group-item">Category: {{todo.category}}</li>
<li class="list-group-item">Priority: {{todo.priority}}</li>
<li class="list-group-item">DueDate: {{todo.dueDate|date('F j,g:i a')}}</li>
<li class="list-group-item">CreateDate: {{todo.createDate|date('F j,g:i a')}}</li>


</ul>

<p>
{{todo.description}}
</p>


{% endblock %}